{
  "plugins": [
      "react"
  ],
  "parser": "babel-eslint",
  "env": {
      "es6":     true,
      "browser": true,
      "node":    true,
      "mocha":   true
  },   
  "extends": [
      "airbnb-base",
      "eslint:recommended", 
      "plugin:react/recommended"
  ],
  "rules": {
    "import/prefer-default-export": "off",
    "react/forbid-prop-types": "off",
    "import/no-unresolved": [
        "error",
        {
          "ignore": [ "@" ]
        }
    ],
    "import/extensions": [
        "error",
        "never",
        {
            "js": "never",
            "json": "always"
        }
    ]
  }
}